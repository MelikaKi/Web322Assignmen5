<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Project - <%= project.title %></title>
    <link rel="stylesheet" href="/css/main.css">
</head>
<body class="bg-gray-100">
    <%- include('partials/navbar', {page: ''}) %>

    <div class="container mx-auto p-6">
        <div class="hero bg-gray-200 p-10 rounded text-center">
            <h1 class="text-3xl font-bold">Edit Project - <%= project.title %></h1>
        </div>

        <form action="/solutions/editProject" method="POST" class="bg-white shadow-md rounded p-6 mt-6 grid grid-cols-2 gap-4">
            <input type="hidden" name="id" value="<%= project.id %>">

            <div>
                <label class="block mb-1 font-bold">Project Title:</label>
                <input type="text" name="title" class="w-full border p-2 rounded" value="<%= project.title %>" required>
            </div>

            <div>
                <label class="block mb-1 font-bold">Feature Image URL:</label>
                <input type="url" name="feature_img_url" class="w-full border p-2 rounded" value="<%= project.feature_img_url %>" required>
            </div>

            <div>
                <label class="block mb-1 font-bold">Sector:</label>
                <select name="sector_id" class="w-full border p-2 rounded" required>
                    <% sectors.forEach(sector => { %>
                        <option <%= (project.sector_id == sector.id) ? "selected" : "" %> value="<%= sector.id %>">
                            <%= sector.sector_name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div>
                <label class="block mb-1 font-bold">Short Summary:</label>
                <textarea name="summary_short" class="w-full border p-2 rounded" required><%= project.summary_short %></textarea>
            </div>

            <div>
                <label class="block mb-1 font-bold">Intro:</label>
                <textarea name="intro_short" class="w-full border p-2 rounded" required><%= project.intro_short %></textarea>
            </div>

            <div>
                <label class="block mb-1 font-bold">Impact:</label>
                <textarea name="impact" class="w-full border p-2 rounded" required><%= project.impact %></textarea>
            </div>

            <div class="col-span-2">
                <label class="block mb-1 font-bold">Original Source URL:</label>
                <input type="url" name="original_source_url" class="w-full border p-2 rounded" value="<%= project.original_source_url %>" required>
            </div>

            <div class="col-span-2 flex justify-end gap-4 mt-4">
                <button type="submit" class="btn btn-success">Update Project</button>
                <a href="/solutions/deleteProject/<%= project.id %>" class="btn btn-error"
                    onclick="return confirm('Are you sure you want to delete this project? This action cannot be undone.');">
                    Delete Project
                </a>
            </div>
        </form>
    </div>
</body>
</html>